<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24px</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="checkBoxBg" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/icon_radio_n</item>
        <item name="android:paddingLeft">25.0px</item>
        <item name="android:maxHeight">10.0px</item>
    </style>
</resources>
