<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/device_msg_bg">

    <TextView
        android:id="@+id/tv_md_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx_md_one"
        android:textSize="22px"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="35px"
        android:layout_marginLeft="80px"
        android:layout_marginStart="80px"
        android:layout_marginRight="70px"
        android:layout_marginEnd="70px"/>

    <!-- button on off -->
    <LinearLayout
        android:id="@+id/ll_md_switch"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_md_one"
        android:layout_alignTop="@+id/tv_md_one"
        android:layout_marginTop="-5px"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_btn_switch_off"
            android:textSize="22px"
            android:textColor="@color/colorWhite"
             />

        <com.example.destiny.myapplication.view.SwitchView
            android:id="@+id/btn_md_one_switch"
            android:layout_width="75px"
            android:layout_height="40px"
            android:layout_marginLeft="25px"
            android:layout_marginEnd="25px"
            android:layout_marginStart="25px"
            android:layout_marginRight="25px"
            app:tintColor="@color/title_left_view_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_btn_switch_on"
            android:textSize="22px"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginStart="60px"
        android:layout_toEndOf="@+id/ll_md_switch"
        android:layout_toRightOf="@+id/ll_md_switch"
        android:layout_alignBottom="@+id/tv_md_one"
        android:textSize="22px"
        android:text="@string/tx_md_one_val"
        android:textColor="@color/title_left_view_bg"
        />

    <!-- radio md_one -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_below="@+id/ll_md_switch"
        android:layout_alignLeft="@+id/ll_md_switch"
        android:layout_alignStart="@+id/ll_md_switch">

        <!-- 二维码 -->
        <CheckBox
            android:id="@+id/cb_btn_md_one_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_md_qr"
            android:textSize="22px"
            android:button="@null"
            android:drawablePadding="25px"
            android:textColor="@color/colorWhite"
            android:drawableRight="@drawable/btn_radio_bg"
            android:drawableEnd="@drawable/btn_radio_bg" />

        <!-- IC卡 -->
        <CheckBox
            android:id="@+id/cb_btn_md_one_ic_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_md_ic_car"
            android:textSize="22px"
            android:button="@null"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="65px"
            android:layout_marginRight="65px"
            android:layout_marginEnd="65px"
            android:drawablePadding="25px"
            android:layout_marginStart="65px"
            android:drawableRight="@drawable/btn_radio_bg" />

        <!-- 人脸识别 -->
        <CheckBox
            android:id="@+id/cb_btn_md_one_reg_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_md_reg_face"
            android:textSize="22px"
            android:button="@null"
            android:drawablePadding="25px"
            android:drawableRight="@drawable/btn_radio_bg"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_md_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx_md_two"
        android:textSize="22px"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/tv_md_one"
        android:layout_marginTop="125px"
        android:layout_alignLeft="@+id/tv_md_one" />

    <!-- button on off -->
    <LinearLayout
        android:id="@+id/ll_md_two_switch"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_md_switch"
        android:layout_alignTop="@+id/tv_md_two"
        android:layout_marginTop="-5px"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_btn_switch_off"
            android:textSize="22px"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/tv_md_one" />

        <com.example.destiny.myapplication.view.SwitchView
            android:id="@+id/btn_md_two_switch"
            android:layout_width="75px"
            android:layout_height="40px"
            android:layout_marginLeft="25px"
            android:layout_marginEnd="25px"
            android:layout_marginStart="25px"
            android:layout_marginRight="25px"
            app:tintColor="@color/switch_bg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_btn_switch_on"
            android:textSize="22px"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/tv_md_one" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginStart="60px"
        android:layout_toEndOf="@+id/ll_md_switch"
        android:layout_toRightOf="@+id/ll_md_switch"
        android:layout_alignTop="@+id/tv_md_two"
        android:textSize="22px"
        android:text="@string/tx_md_two_val"
        android:textColor="@color/title_left_view_bg" />

    <!-- radio md_two -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_below="@+id/ll_md_two_switch"
        android:layout_alignLeft="@+id/ll_md_switch"
        android:layout_alignStart="@+id/ll_md_switch">

        <!-- 二维码 -->
        <CheckBox
            android:id="@+id/cb_btn_md_two_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_md_qr"
            android:textSize="22px"
            android:button="@null"
            android:drawablePadding="25px"
            android:drawableRight="@drawable/btn_radio_bg"
            android:textColor="@color/colorWhite" />

        <!-- IC卡 -->
        <CheckBox
            android:id="@+id/cb_btn_md_two_ic_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_md_ic_car"
            android:textSize="22px"
            android:button="@null"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="65px"
            android:layout_marginRight="65px"
            android:layout_marginEnd="65px"
            android:drawablePadding="25px"
            android:layout_marginStart="65px"
            android:drawableRight="@drawable/btn_radio_bg" />

        <!-- 人脸识别 -->
        <CheckBox
            android:id="@+id/cb_btn_md_two_reg_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_md_reg_face"
            android:textSize="22px"
            android:button="@null"
            android:drawablePadding="25px"
            android:drawableRight="@drawable/btn_radio_bg"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>